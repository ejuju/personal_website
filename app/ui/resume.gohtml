{{ define "page_title" }}Résumé{{ end }}
{{ define "meta_description" }}Read my résumé{{ end }}
{{ define "page_main" }}
<main class="page">
	<section class="intro">
		<h1>
			<span>📜</span>
			Résumé
		</h1>
		<p>
			I'm a passionate self-taught software engineer<br />
			experienced in backend and frontend web development.
		</p>
		<nav>
			<a href="/contact">Get in touch</a>
			<a href="/resume.pdf" download="resume_julien_sellier.pdf">Download résumé (PDF)</a>
		</nav>
	</section>

	<section id="experiences" class="tile">
		<h2>Experiences</h2>
		<hr>
		{{ range .Experiences }}
		<section class="tile">
			<h3>{{ .Title }}</h3>
			<p class="Company"><span>🏢</span>{{ .Company }}</p>
			<p class="Duration"><span>🗓️</span>{{ .From }} to {{ .To }}</p>
			<p class="Description"><span>ℹ️</span>{{ .Description }}</p>
			<p class="Location"><span>🌍</span>{{ .Location }}</p>
			<div class="Tools">
				<span>⚒️</span>
				<ul class="inlinelist">
					{{ range .SkillsAndTools }}
					<li>{{ . }}</li>
					{{ end }}
				</ul>
			</div>
		</section>
		{{ end }}
	</section>

	<section id="skills" class="tile">
		<h2>Main skills</h2>
		<hr>
		{{ range .Skills }}
		<section class="tile">
			<h3>{{ .Title }}</h3>
			<ul class="inlinelist">
				{{ range .Tools }}
				<li>{{ . }}</li>
				{{ end }}
			</ul>
		</section>
		{{ end }}
	</section>

	<section id="languages" class="tile">
		<h2>Spoken languages</h2>
		<hr>
		{{ range .Languages }}
		<section>
			<span>{{ .Flag }}</span>
			<div>
				<h3>{{ .Name }}</h3>
				<p>{{ .Level }}</p>
			</div>
		</section>
		{{ end }}
	</section>
</main>

<style lang="scss">
	.page {
		display: flex;
		flex-direction: column;
		gap: 4rem;
	}

	h2 {
		text-align: center;
		padding-bottom: 2rem;
	}

	#experiences>section,
	#skills>section,
	#languages>section {
		margin-top: 2rem;
	}

	#experiences .Company,
	#experiences .Location,
	#experiences .Description,
	#experiences .Duration,
	#experiences .Tools {
		display: flex;
		align-items: baseline;
		gap: 0.75rem;
		margin-top: 1rem;
		color: var(--clr-txt-1);
	}

	/* Make emojis bigger */
	#experiences span,
	#languages>section>span {
		font-size: 1.25rem;
	}

	#skills>section>ul {
		margin-top: 1rem;
		color: var(--clr-txt-1);
	}

	#languages>section {
		display: flex;
		align-items: baseline;
		gap: 1rem;
	}
</style>
{{ end }}